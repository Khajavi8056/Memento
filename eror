    m_potential_signals[total].grace_candle_count = 0; // Ø´Ù…Ø§Ø±Ù†Ø¯Ù‡ Ù…Ù‡Ù„Øª Ø§Ø² ØµÙØ± Ø´Ø±ÙˆØ¹ Ù…ÛŒâ€ŒØ´ÙˆØ¯
    
