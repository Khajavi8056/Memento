struct SPotentialSignal
{
    datetime        time;                 // Ø²Ù…Ø§Ù† ÙˆÙ‚ÙˆØ¹ Ø³ÛŒÚ¯Ù†Ø§Ù„ Ø§ÙˆÙ„ÛŒÙ‡
    bool            is_buy;               // Ø¬Ù‡Øª Ø³ÛŒÚ¯Ù†Ø§Ù„ (Ø®Ø±ÛŒØ¯/ÙØ±ÙˆØ´)
    int             grace_candle_count;   // Ø´Ù…Ø§Ø±Ù†Ø¯Ù‡ Ú©Ù†Ø¯Ù„â€ŒÙ‡Ø§ Ø¨Ø±Ø§ÛŒ Ù…Ù‡Ù„Øª Ú©Ù†Ø¯Ù„ÛŒ
    double          invalidation_level;   // Ø³Ø·Ø­ Ù‚ÛŒÙ…Øª Ø¨Ø±Ø§ÛŒ Ø§Ø¨Ø·Ø§Ù„ Ø³ÛŒÚ¯Ù†Ø§Ù„ Ø¯Ø± Ù…Ù‡Ù„Øª Ø³Ø§Ø®ØªØ§Ø±ÛŒ
    
    // Ø³Ø§Ø²Ù†Ø¯Ù‡ Ú©Ù¾ÛŒ (Copy Constructor)
    SPotentialSignal(const SPotentialSignal &other)
    {
        time = other.time;
        is_buy = other.is_buy;
        grace_candle_count = other.grace_candle_count;
        invalidation_level = other.invalidation_level;
    }
    // Ø³Ø§Ø²Ù†Ø¯Ù‡ Ù¾ÛŒØ´â€ŒÙØ±Ø¶ (Ø¨Ø±Ø§ÛŒ Ø§ÛŒÙ†Ú©Ù‡ Ú©Ø¯ Ø¨Ù‡ Ù…Ø´Ú©Ù„ Ù†Ø®ÙˆØ±Ù‡)
    SPotentialSignal()
    {
       invalidation_level = 0.0;
    }
};

