    if (is_buy)
    {
        // ...Ù…Ø§ Ø¯Ù†Ø¨Ø§Ù„ ÛŒÚ© Ø´Ú©Ø³Øª ØµØ¹ÙˆØ¯ÛŒ Ø¯Ø± ØªØ§ÛŒÙ… ÙØ±ÛŒÙ… Ù¾Ø§ÛŒÛŒÙ† Ù‡Ø³ØªÛŒÙ…
        if (mss_signal.type == MSS_BREAK_HIGH || mss_signal.type == MSS_SHIFT_UP)
