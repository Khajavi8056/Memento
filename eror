    SPotentialSignal()
    {
       // Ø®Ø§Ù„ÛŒ Ù…ÛŒâ€ŒÙ…ÙˆÙ†Ù‡
       invalidation_level = 0.0; // Ù…Ù‚Ø¯Ø§Ø±Ø¯Ù‡ÛŒ Ø§ÙˆÙ„ÛŒÙ‡
