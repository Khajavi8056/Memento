        int atr_sl_handle = iATR(m_symbol, timeframe, m_settings.atr_filter_period); // âœ…âœ…âœ… Ø§Ø³ØªÙØ§Ø¯Ù‡ Ø§Ø² ØªØ§ÛŒÙ…â€ŒÙØ±ÛŒÙ… Ø¬Ø¯ÛŒØ¯ âœ…âœ…âœ…
        if (atr_sl_handle == INVALID_HANDLE)
        {
            Log("Ø®Ø·Ø§ÛŒ Ø¨Ø­Ø±Ø§Ù†ÛŒ Ø¯Ø± CalculateAtrStopLoss: Ù‡Ù†Ø¯Ù„ ATR Ù†Ø§Ù…Ø¹ØªØ¨Ø± Ø§Ø³Øª!");
            return 0.0;
        }
        
