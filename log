            else log_returns[i] = 0;
        }

        int n = ArraySize(log_returns);
        if(n < 16) return m_last_hurst;

        double cum_dev = 0, max_dev = 0, min_dev = 0, mean = 0;
        for(int i = 0; i < n; i++) mean += log_returns[i];
        mean /= n;

        double std_dev = 0;
        for(int i = 0; i < n; i++)
