      if (g_symbol_managers[i] != NULL) {
         delete g_symbol_managers[i];
         g_symbol_managers[i] = NULL;
      }
   }
   ArrayFree(g_symbol_managers);


//--- Ù¾Ø§Ú© Ú©Ø±Ø¯Ù† ØªÙ…Ø§Ù… Ø§Ø´ÛŒØ§Ø¡ Ú¯Ø±Ø§ÙÛŒÚ©ÛŒ Ø¨Ø§ Ù¾ÛŒØ´ÙˆÙ†Ø¯ ØµØ­ÛŒØ­
