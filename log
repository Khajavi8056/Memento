        {
            m_logger.Log("Ø®Ø·Ø§: Ø¯Ø§Ø¯Ù‡ Ú©Ø§ÙÛŒ Ø¨Ø±Ø§ÛŒ Ù…Ø­Ø§Ø³Ø¨Ù‡ Hurst Ù…ÙˆØ¬ÙˆØ¯ Ù†ÛŒØ³Øª");
