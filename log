    if(is_buy)
    {
        m_trade.Buy(lot_size, m_symbol, 0, sl, tp, comment);
    }
    else
    {
        m_trade.Sell(lot_size, m_symbol, 0, sl, tp, comment);
    }
    
    // Ù„Ø§Ú¯ Ú©Ø±Ø¯Ù† Ù†ØªÛŒØ¬Ù‡
    if(m_trade.ResultRetcode() == TRADE_RETCODE_DONE)
