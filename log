        {
            m_logger.Log("ØªØ£ÛŒÛŒØ¯ MTF: Ø´Ú©Ø³Øª Ù†Ø²ÙˆÙ„ÛŒ Ø¨Ø§ Ù‚ÛŒÙ…Øª Ù¾Ø§ÛŒÛŒÙ† EMA Ø¯Ø± HTF");
