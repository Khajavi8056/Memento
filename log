            m_logger.Log("Ø®Ø·Ø§: Ø¯Ø§Ø¯Ù‡ Ú©Ø§ÙÛŒ Ø¨Ø±Ø§ÛŒ Ù…Ø­Ø§Ø³Ø¨Ù‡ Ø¢Ø³ØªØ§Ù†Ù‡ ADX Ù…ÙˆØ¬ÙˆØ¯ Ù†ÛŒØ³Øª");
            return;
        }

