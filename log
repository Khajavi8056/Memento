    double sl = CalculateStopLoss(is_buy, entry_price);

    if(sl == 0)
    {
        Log("Ø®Ø·Ø§ Ø¯Ø± Ù…Ø­Ø§Ø³Ø¨Ù‡ Ø§Ø³ØªØ§Ù¾ Ù„Ø§Ø³. Ù…Ø¹Ø§Ù…Ù„Ù‡ Ø¨Ø§Ø² Ù†Ø´Ø¯.");
