        {
            m_logger.Log("Ø®Ø·Ø§: Ø§ÛŒØ¬Ø§Ø¯ Ù‡Ù†Ø¯Ù„ RSI Ù†Ø§Ù…ÙˆÙÙ‚");
            return false;
        }

