            return VOLATILITY_EXPANSION;
        }
        m_logger.Log("Ù†ÙˆØ³Ø§Ù†Ø§Øª: Ø­Ø§Ù„Øª Ù†Ø±Ù…Ø§Ù„");
        return VOLATILITY_NORMAL;
    }
