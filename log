            ArraySetAsSeries(m_adx_plus_di_buf, true); // âœ… Ø§ØµÙ„Ø§Ø­
            ArraySetAsSeries(m_adx_minus_di_buf, true); // âœ… Ø§ØµÙ„Ø§Ø­
